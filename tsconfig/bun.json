{
  "$schema": "https://json.schemastore.org/tsconfig",
  // Inspired from https://bun.sh/docs/typescript#suggested-compileroptions with everything non-specific to Bun removed.
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",

    // Bundler mode
    "moduleResolution": "bundler",
    "noEmit": true
  }
}
